@model IndexModel
@using AlDS.Coursework.Board.UserModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager



<div class="account_block">
@if (SignInManager.IsSignedIn(User))
{
    <p class="account_block_text"><a href="Person/Index?email=@User.Identity.Name">Аккаунт</a></p>
    <p class="account_block_text">
       <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
       <button class="button_main" type="submit">Выйти из аккаунта</button>
       </form>
    </p>
}
else
{

    <p class="account_block_text"><a asp-area="Identity" asp-page="/Account/Login">Войти</a></p>
    <p class="account_block_text"><a asp-area="Identity" asp-page="/Account/Register">Зарегистрироваться</a></p>
}

</div>