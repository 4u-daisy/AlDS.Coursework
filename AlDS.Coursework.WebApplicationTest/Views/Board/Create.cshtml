@model AlDS.Coursework.Board.BoardModel.Board
@using AlDS.Coursework.Board.UserModel
@using Microsoft.AspNetCore.Identity
@using AlDS.Coursework.Board.BoardModel
@using AlDS.Coursework.Board.RelatedTablesModel
@using AlDS.Coursework.WebApplicationTest.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@{
    ViewData["Title"] = "Create";
}




@{
    Layout = "../../Pages/Shared/_Layout.cshtml";
}



<div class="person_main_page">

    <div class="board">

        <div class="board_setting"> 
            <div >
                    <div class="form-group">

                <form asp-action="Create" method="post">
                        <input class="p_board" type="text" name="Title" placeholder="Название" />
                        <input class="p_board" type="text" name="Description" placeholder="Описание" />
                        <input class="p_board" type="text" name="Space" placeholder="Введите пространство" />
                        <input type="hidden" name="UserId" value = @User.Identity.Name>
                    <div class="form-group">
                        <input type="submit" value="Create" />
                    </div>
                </form>
                                    </div>

                <a href=".." class="p_board">Вернуться назад</a>
            </div>
        
        </div>

    </div>
</div>
















